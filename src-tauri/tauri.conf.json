{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "geema",
  "version": "1.0.2",
  "identifier": "com.tauri-app.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Geema",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true,
        "fullscreen": false,
        "maximized": true,
        "theme": "Dark",
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://api.github.com/repos/idboussadel/technicien-app/releases/latest"],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJDQTEzOTcyQjE5M0VENzUKUldSMTdaT3hjam1oTElDK2RZMFExNWUvVncxbUxhYWhDaTBueDBYVDhJWDkzSmhBN2xDc3Y0Q0wK"
    }
  }
}
